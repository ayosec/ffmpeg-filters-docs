.header
  .breadcrumbs
    - breadcrumbs.each.with_index do |bc, idx|
      - if idx > 0
        %span.separator= " ‚ù≠ "

      - if bc.link
        %a{href: bc.link}= bc.label
      - else
        %b= bc.label

  .since-version
    - if item.first_version
      %span{ title: "Estimation based on the documentation." } Since<sup>*</sup>
      = item.first_version

!= item.html

:javascript
  "use strict";

  document.addEventListener("DOMContentLoaded", () => {

    if(!navigator.clipboard || !navigator.clipboard.writeText) {
      console.log("clipboard.writeText not available.");
      return;
    }

    for(const elem of document.querySelectorAll("pre[data-source]")) {
      let button = document.createElement("BUTTON");

      button.classList.add("copy");
      button.append(document.createTextNode("Copy"));

      button.addEventListener("click", () => {
        navigator.clipboard.writeText(elem.dataset.source).then(
          () => { notifyClipboardResult(button, "Copied!"); },
          () => { notifyClipboardResult(button, "Failed"); }
        );
      });

      elem.prepend(button);
    }
  });

  function notifyClipboardResult(button, message) {
    let original = button.innerText;
    button.innerText = message;
    button.classList.add("result");
    setTimeout(() => {
      button.innerText = original;
      button.classList.remove("result");
    }, 1500);
  }
